用循环语句来求一到一百的奇数
#include<stdio.h>
int main()
{
int i;
for(i=1;i<=100;i++)
{
if(i%2==1)
printf("%d\n");
}
return 0;
}


#include<stdio.h>
int main()
{
int i=1;
while(i<=100)
{
if(i%2==1)
printf("%d\n");
i++;
}
return 0;
}

for循环语句                                           
#include<stdio.h>                                                                
int main()
{
	int i=0;
	for(i=1;i<=10;i++)
	{
		if(i==5)
	    continue;
		printf("%d\n",i);//最后输出1，2，3，4，6，7，8，9，10
	}
	return 0;
 }


#include<stdio.h>
int main()
{
	int i=0;
	while(i<=10)
	{
		if(i==5)
		continue;
		printf("%d\n",i)；//最后输出1，2，3，4后不会出现5，陷入死循环。
                i++;
	}
	return 0;
}


#include<stdio.h>
int main()
{
	int i=0;
	for(i=1;i<=10;i++)
	{
		if(i==5)
	    break;
		printf("%d\n",i);最后输出1，2，3，4
	}
	return 0;
 } 


计算n的阶乘
#include<stdio.h>
int main()
{
int a=1,i=1;
int n;
scanf("%d",&n);
for(i=1;i<=n;i++)
{
a=a*i;
}
ptintf("n!=%d",a);
return 0;
}

计算1！+2！+3！+.....+10!//用for循环的嵌套结构
#include<stdio.h>
int main()
{
int a=1,i=1,sum;
int n;
for(n=1;n<=10;n++)
{
a=1；//必须要加这个因为如果不加就会使下面的a始终被牢记不会从1开始，例如n=3的话，a=2*1*2*3了，不是1*1*2*3，所以会导致1!+2!+3!=15而不是9
for(i=1;i<=n;i++)
{
a=a*i;
}
sum=sum+a;
}printf("%d",sum);
return 0;
}
