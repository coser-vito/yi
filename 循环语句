用循环语句来求一到一百的奇数
#include<stdio.h>
int main()
{
int i;
for(i=1;i<=100;i++)
{
if(i%2==1)
printf("%d\n");
}
return 0;
}


#include<stdio.h>
int main()
{
int i=1;
while(i<=100)
{
if(i%2==1)
printf("%d\n");
i++;
}
return 0;
}

for循环语句                                           
#include<stdio.h>                                                                
int main()
{
	int i=0;
	for(i=1;i<=10;i++)
	{
		if(i==5)
	    continue;
		printf("%d\n",i);//最后输出1，2，3，4，6，7，8，9，10
	}
	return 0;
 }


#include<stdio.h>
int main()
{
	int i=0;
	while(i<=10)//do-while语句也是一样的。
	{
		if(i==5)
		continue;
		printf("%d\n",i)；//最后输出1，2，3，4后不会出现5，陷入死循环。
                i++;
	}
	return 0;
}


#include<stdio.h>
int main()
{
	int i=0;
	for(i=1;i<=10;i++)//while，do-while语句用break最后输出的结果是一样的。
	{
		if(i==5)
	    break;
		printf("%d\n",i);最后输出1，2，3，4
	}
	return 0;
 } 


计算n的阶乘
#include<stdio.h>
int main()
{
int a=1,i=1;
int n;
scanf("%d",&n);
for(i=1;i<=n;i++)
{
a=a*i;
}
ptintf("n!=%d",a);
return 0;
}

计算1！+2！+3！+.....+10!//用for循环的嵌套结构
#include<stdio.h>
int main()
{
int a=1,i=1,sum=0;
int n;
for(n=1;n<=10;n++)
{
a=1；//必须要加这个因为如果不加就会使下面的a始终被牢记不会从1开始，例如n=3的话，a=2*1*2*3了，不是1*1*2*3，所以会导致1!+2!+3!=15而不是9
for(i=1;i<=n;i++)
{
a=a*i;
}
sum=sum+a;
}
printf("sum=%d",sum);
return 0;
}

#include<stdio.h>
int main()
{
int a=1,sum=0;
int n;
for(n=1;n<=10;n++)
{
a=a*n;
sum=sum+a;
}
printf("sum=%d",sum);
return 0;
}


计算1-1/2+1/3-1/4......+1/99-1/100的和
#include<stdio.h>
int main()
{
int i=1,s=1;
float sum1=o,sum2=0,sum;
whlie(i<=100)
{
sum1=sum1+1.0/i;
i=i+2;
}
while(s<=100)
{
sum2=sum2-1.0/s;
s=s+2;
}
sum=sum1+sum2;
printf("sum=%f",sum);
return 0;
}
#include<stdio.h>
int main()
{
int i=0,flage=1;
float sum=0;
for(i=1;i<=100;i++)
{
sum=sum+flage*1.0/i;
flage=-flage；
}
printf("sum%f\n",sum);
return 0
}
